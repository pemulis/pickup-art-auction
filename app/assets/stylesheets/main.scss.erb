$content-width: 800px;

body {
	background: {
		image: url(<%= asset_path 'dark_fish_skin.png' %>);
		repeat: repeat;
		color: #221F1F;
	}
	color: #DDD;
}

#header {
	margin-bottom: 10px;
}

#footer {
	p {
		font-size: .75em;
		text-align: right;
		max-width: $content-width;
		margin: {
			left: auto;
			right: auto;
		}
	}
}

p {
	text-align: justify; 
	font-size: 2em;
	max-width: $content-width;
	margin: {
		left: auto;
		right: auto;
	}
}

.video_box {
	max-width: $content-width;
	margin: {
		left: auto;
		right: auto;
	}
}

h1 {
	font: {
		size: 4em;
		family: 'Julius Sans One', sans-serif;
	}
	text-align: right;
	color: #EEE;
	max-width: $content-width;
	margin: {
		left: auto;
		right: auto;
    bottom: .4em;
    top: .3em;
	}
}

a:link, a:visited, a:active {
  color: #16E4D0;
  text-decoration: none;
}

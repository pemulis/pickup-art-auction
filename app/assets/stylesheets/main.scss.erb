$content-width: 800px;

body {
	background: {
		image: url(<%= asset_path 'light_noise_diagonal.png' %>); 
		repeat: repeat;
	}
}

#header {
	background-color: #020304;
}

p {
	text-align: justify; 
	font-size: 2em;
	max-width: $content-width;
	margin: {
		left: auto;
		right: auto;
	}
}

.video_box {
	max-width: $content-width;
	margin: {
		left: auto;
		right: auto;
	}
}

// For background image transition. See Javascript assets for details.
.second_bg_image {
	background: {
		image: url(<%= asset_path 'dark_fish_skin.png' %>);
		repeat: repeat;
	}
	color: #EED;

	a:link, a:visited, a:active {
		color: #16E4D0;
	}
}

h1 {
	font: {
		size: 4em;
		family: 'Andika', sans-serif;
	}
	text-align: right;
	color: #DDE;
	padding: .2em 0 .3em 0;
	max-width: $content-width;
	margin: {
		left: auto;
		right: auto;
	}
}

a:link, a:visited, a:active {
	text-decoration: none;
}
